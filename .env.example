# Environment Variables for KidSafe Alphabet Tutor
# Copy this file to .env and fill in your values

# Ollama Configuration (for LLM)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b

# Gradio Configuration
GRADIO_SERVER_NAME=0.0.0.0
GRADIO_SERVER_PORT=7860
GRADIO_SHARE=true

# Model Paths (if using local models)
WHISPER_MODEL_PATH=models/whisper-small.en
PIPER_MODEL_PATH=models/piper-amy-medium
YOLO_MODEL_PATH=models/yolov8n.pt

# Performance Settings
MAX_RESPONSE_TIME_MS=1200
STREAM_CHUNK_SIZE=1024
VAD_THRESHOLD=0.5
ASR_CONFIDENCE_THRESHOLD=0.7

# Safety Settings
ENABLE_CONTENT_FILTER=true
ENABLE_PII_DETECTION=true
MAX_SESSION_DURATION_MINUTES=30

# Development Settings
DEBUG=false
LOG_LEVEL=INFO